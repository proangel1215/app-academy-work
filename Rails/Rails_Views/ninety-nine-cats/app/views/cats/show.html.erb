<table>
    <thead>
        <tr>
            <th align="left"><%= @cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Color:</td>
            <td><%= @cat.color %></td>
        </tr>
        <tr>
            <td>Sex:</td>
            <td><%= @cat.sex %></td>
        </tr>
        <tr>
            <td>Birth Date:</td>
            <td><%= @cat.birth_date.to_formatted_s(:long) %></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><%= @cat.description %></td>
        </tr>
    </tbody>
</table>


